post_install() {
  for d in /usr/lib/modules/*; do
    [ -d "$d" ] && depmod -a "$(basename "$d")"
  done
}

post_upgrade() {
  for d in /usr/lib/modules/*; do
    [ -d "$d" ] && depmod -a "$(basename "$d")"
  done
}

post_remove() {
  for d in /usr/lib/modules/*; do
    [ -d "$d" ] && depmod -a "$(basename "$d")"
  done
}
